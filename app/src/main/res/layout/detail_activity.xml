<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/id_details__backdrop__image_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/color_white"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_margin="2dp"
                app:layout_constraintDimensionRatio="H,3:2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/id_details__poster__image_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/color_white"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_margin="10dp"
                app:layout_constraintDimensionRatio="H,3:2"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/id_details__name__text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id_details__backdrop__image_view"
                tools:text="MIB 3" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/id_details__release_date__text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id_details__name__text_view"
                tools:text="2019-09-16" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/id_details__genres__text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id_details__release_date__text_view"
                tools:text="Documentary" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/id_details__overview__text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="18sp"
                android:textColor="@color/color_black"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/id_details__genres__text_view"
                tools:text="MIB 3" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</LinearLayout>